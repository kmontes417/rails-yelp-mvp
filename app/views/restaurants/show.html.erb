<h2><%= @restaurant.name %></h2>
<p> Address: <%= @restaurant.address %></p>
<p> Phone: <%= @restaurant.phone_number %></p>
<p> Category: <%= @restaurant.category %></p>

<p> REVIEWS:</p>

<% @reviews.each do |review| %>
  <p> Content: <%= review.content %>, Rating: <%= review.rating %> </p>
<% end %>

<%= link_to "Edit restaurant details", edit_restaurant_path(@restaurant), class: "btn btn-primary"%>

<%= link_to "Delete restaurant", restaurant_path(@restaurant),
      method: :delete,
      data: { confirm: "Are you sure?"}, class: "btn btn-danger" %>

<%= link_to "Create a review", new_restaurant_review_path(@restaurant), class: "btn btn-success"%>


